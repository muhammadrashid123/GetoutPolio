<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamRegistration">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo2_user"
        android:id="@+id/team_image_Id">
    </ImageView>

    <EditText
        android:id="@+id/member_Reg_name_id"
        android:layout_below="@id/team_image_Id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#D4D8DC"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Enter Name">
    </EditText>
    <EditText
        android:id="@+id/member_Father_name_id"
        android:layout_below="@id/member_Reg_name_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#D4D8DC"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Enter Father Name">
    </EditText>
    <EditText
        android:id="@+id/member_CNIC_no_id"
        android:layout_below="@id/member_Father_name_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#D4D8DC"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="number"
        android:hint="Enter CNIC NO">
    </EditText>
    <EditText
        android:id="@+id/member_contact__id"
        android:layout_below="@id/member_CNIC_no_id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#D4D8DC"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="number"
        android:hint="Enter Contact No">
    </EditText>
    <EditText
        android:id="@+id/member_address_id"
        android:layout_below="@id/member_contact__id"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#D4D8DC"
        android:drawableLeft="@drawable/ic_password"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:maxLength="50"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Enter Address">
    </EditText>

