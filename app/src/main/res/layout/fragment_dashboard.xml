    tools:context="Fragment.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgapps"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="15dp"
               android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textDashboard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccinator Dashboard"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"></TextView>
<!--                <ImageView-->
<!--                    android:layout_above="@id/text1Dashboard_id"-->
<!--                    android:id="@+id/dot_IV_id"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:src="@drawable/dot"></ImageView>-->
                <TextView
                    android:id="@+id/text1Dashboard_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDashboard_id"
                    android:layout_marginTop="6dp"
                    android:text="Box Temperature:4  C"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_above="@+id/text1Dashboard_id"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="-15dp"
                    android:src="@drawable/temp_dot_icon" />

                <TextView
                    android:layout_below="@id/text1Dashboard_id"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:text="Medicine Availability:8/46">
                </TextView>
                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/logo2_user"
                    android:layout_alignParentRight="true"></ImageView>

            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:rowCount="5"
                android:columnCount="2"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView

                            android:id="@+id/areas_item_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/area2"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Area"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:clickable="true"
                            android:id="@+id/team_item_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/team3"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Team"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/maps_item_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/maps"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Location"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/registraion_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/polio_registraion"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Childs registraion"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/task_des_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/task"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Task"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/security_threats_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                             android:src="@drawable/threatsalerm"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security Threats "
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/campaign_dates_id"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bookmark"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="campaign dates"
                            android:textSize="18sp"
                            android:textColor="#6f6f6f"
                            android:layout_marginTop="12dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

